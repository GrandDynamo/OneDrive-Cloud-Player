                <Button
                    Grid.Column="1"

                    FontSize="16"
                    FontFamily="{StaticResource Lato}"
                    FontWeight="Regular"
                    Foreground="White"
                
                    BorderBrush="#FFFFFF"
                    BorderThickness="2"
                    
                    Command="{Binding LogoutCommand}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#1C262E"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" Padding="10">
                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#414E58"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="/Assets/Icons/logout.png" Width="20" HorizontalAlignment="Left"/>
                        <TextBlock
                            Grid.Column="1"
                            Text="Logout"

                            FontSize="16"
                            FontFamily="{StaticResource Lato}"
                            FontWeight="Regular"
                            Foreground="White"/>
                    </Grid>
                </Button>
            </Grid>

            <TextBox
                Text="Search..."
                Grid.Row="2"

                FontSize="16"
                FontFamily="{StaticResource Lato}"
                FontWeight="Regular"
                Foreground="#353F46"
                
                Background="Transparent"
                BorderBrush="#353F46"
                BorderThickness="0, 2"
                Padding="20, 15, 15, 15"
                Margin="0">

                <!--Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"-->
            </TextBox>

            <Grid Grid.Row="3" Margin="0, 0, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button
                    Grid.Column="0"

                    FontSize="16"
                    FontFamily="{StaticResource Lato}"
                    FontWeight="Regular"
                    Foreground="White"
                    
                    Command="{Binding SettingsCommand}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#1C262E"/>
                            <Setter Property="BorderBrush" Value="Red"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" Padding="10">
                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#414E58"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="/Assets/Icons/reloadDrives.png" Width="20" HorizontalAlignment="Left"/>
                        <TextBlock
                            Grid.Column="1"
                            Text="Reload drives"

                            FontSize="16"
                            FontFamily="{StaticResource Lato}"
                            FontWeight="Regular"
                            Foreground="White"/>
                    </Grid>
                </Button>
            </Grid>

