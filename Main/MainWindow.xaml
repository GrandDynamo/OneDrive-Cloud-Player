    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <!--Applies the gradient background-->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E2931" Offset="0.0"/>
            <GradientStop Color="#384D5A" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <!--GRID EXPLORER WINDOW-->
