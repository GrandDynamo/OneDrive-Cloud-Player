<Window x:Class="OneDrive_Cloud_Player.VLC.VideoPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneDrive_Cloud_Player.VLC" 
        xmlns:wpf="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="VideoPlayerWindow" Height="450" Width="800">
    <Window.Resources>
        <local:VideoPlayerViewModel x:Key="VideoPlayerVM"/>
    </Window.Resources>
    <Grid>
        <wpf:VideoView x:Name="videoView" Panel.ZIndex="1">
            <StackPanel Orientation="Horizontal" x:Name="test">
                <Button Name="PlayButton" Content="PLAY" Height="25" Width="50" Command="{Binding PlayVideoCommand, Source={StaticResource VideoPlayerVM}}"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="PlayButton_Click"/>
                <Button Content="STOP" Height="25" Width="50"  Command="{Binding StopVideoCommand, Source={StaticResource VideoPlayerVM}}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="StopButton_Click" />
            </StackPanel>
        </wpf:VideoView>
    </Grid>
</Window>
