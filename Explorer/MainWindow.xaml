<Window x:Class="Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Explorer"
        mc:Ignorable="d"
        Title="SASP 0.1 Alpha" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1E2931" Offset="0.0" />
                <GradientStop Color="#384D5A" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="1"/>
            <Button x:Name="Back" Content="&lt;" Background="Transparent" BorderThickness="0.5" Margin="10,7,80,42"/>
            <Button x:Name="Next" Content="&gt;" Background="Transparent" BorderThickness="0.5" Margin="80,7,10,42"/>
            <!-- Grid background gradiant-->
        </Grid>
        <TextBox x:Name="DescriptionHolder" Text="Text" TextWrapping="Wrap" Grid.Column="1" Grid.Row="0" Visibility="Visible" Background="Transparent"/>
    </Grid>
</Window>
