<Window x:Class="Explorer.ExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Explorer"
        mc:Ignorable="d"
        Title="SASP 0.1 Alpha" Height="450" Width="800">
    <Window.DataContext>
        <local:ExplorerView/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1E2931" Offset="0.0" />
                <GradientStop Color="#384D5A" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Button x:Name="Back" Content="&lt;" Background="Transparent" BorderThickness="0.5" Margin="10,7,80,42"/>
            <Button x:Name="Next" Content="&gt;" Background="Transparent" BorderThickness="0.5" Margin="80,7,10,42"/>
            <Button Grid.Column="0" Grid.Row="1" Command="{Binding TestCallCommand}" Margin="414,146,-414,180"></Button>
            <!--<Button Command="{Binding CreateList, Source={StaticResource ExplorerVM}}" Margin="212,36,-212,323" Grid.RowSpan="2"/>-->
            <ListBox ItemsSource="{Binding DriveItemList}" Margin="0,72,0,290" Grid.RowSpan="2">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <!--<TextBlock Text="{Binding Title}"></TextBlock>-->
                            <TextBlock Text="{Binding RemoteItem.Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--<Button "Log Name="LoginButn" FontSize="15" MouseDown="{Binding TestCallCommand, Source={StaticResource ExplorerVM}}"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="70" Margin="0,36,0,0"/> -->
        </Grid>
        <!--<TextBox x:Name="DescriptionHolder" Text="Text" TextWrapping="Wrap" Grid.Column="1" Grid.Row="0" Visibility="Visible" Background="Transparent"/>-->
    </Grid>
</Window>
