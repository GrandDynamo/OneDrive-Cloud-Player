<Controls:MetroWindow x:Class="OneDrive_Cloud_Player.MainScreen.MainWindow"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneDrive_Cloud_Player.MainScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!--Applies the gradient background-->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E2931" Offset="0.0"/>
            <GradientStop Color="#384D5A" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Width="200"></Grid>
        <Grid Grid.Column="1"></Grid>
        <Grid Grid.Column="2"></Grid>
        

    </Grid>

    <!--WINDOWS GRIDS-->
    

</Controls:MetroWindow>
